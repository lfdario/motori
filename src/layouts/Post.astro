---
import Base from "@/layouts/Base.astro";

const {
  title,
  description,
  author = "Redazione",
  pubDate,
  cover,
  categories = [],
  tags = []
} = Astro.props;

const fallback = `${import.meta.env.BASE_URL}images/placeholder.jpg`;
const normalizedCover =
  (typeof cover === "string" && /^https?:\/\//.test(cover))
    ? cover
    : fallback;
